<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckOutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Great, You Selected Our"
        android:textColor="#181A3E"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/hairdresser"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salon Package"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#181A3E"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#181A3E"
        android:text="Type : Men , Beard Shaving"
        android:textSize="25dp"
        android:layout_margin="15dp"
        android:gravity="center"/>
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="40dp"
        android:layout_margin="15dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="25dp"
                android:text="Your Amount:"/>
            
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/rupee"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="150.00"
                android:gravity="center|left"
                android:textSize="25dp"/>
            
        </LinearLayout>
        
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:backgroundTint="#181A3E"
        app:cardCornerRadius="6dp"
        android:elevation="30dp"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Proceed To CheckOut"
                android:textColor="@color/white"
                android:gravity="center|right"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_rigtharrowwhite"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>