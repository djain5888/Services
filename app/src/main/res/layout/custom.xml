<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/image1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:src="@drawable/cross1" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="115dp"
        android:layout_height="82dp"
        android:layout_below="@+id/image1"
        android:layout_marginRight="5dp"
        android:src="@drawable/spa" />

    <TextView
        android:id="@+id/text"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/image1"
        android:layout_toRightOf="@+id/image"
        android:textColor="@color/black"
        android:text="10% Discount "
        android:gravity="center"
        android:textSize="25dp" />/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/image"
        android:layout_toRightOf="@+id/image2"
        android:textColor="@color/black"
        android:text="10% on Movers"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="25dp" />/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/image2"
        android:layout_toRightOf="@+id/image3"
        android:textColor="@color/black"
        android:text="10% On Carpenter"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="25dp" />/>
    <TextView
        android:id="@+id/text4"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/image3"
        android:layout_toRightOf="@+id/image4"
        android:textColor="@color/black"
        android:text="10% on AC Repair"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="25dp" />/>



    <ImageView
        android:id="@+id/image2"
        android:layout_width="115dp"
        android:layout_height="82dp"
        android:layout_below="@+id/image"
        android:layout_marginRight="5dp"
        android:src="@drawable/pckmov" />
    <ImageView
        android:id="@+id/image3"
        android:layout_width="115dp"
        android:layout_height="82dp"
        android:layout_below="@+id/image2"
        android:layout_marginRight="5dp"
        android:src="@drawable/carpenter" />
    <ImageView
        android:id="@+id/image4"
        android:layout_width="115dp"
        android:layout_height="82dp"
        android:layout_below="@+id/image3"
        android:layout_marginRight="5dp"
        android:src="@drawable/ac" />

</RelativeLayout>