<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Professional">

    <android.support.v7.widget.CardView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="@color/grey_800"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp"
            android:text="BECOME A PROFESSIONAL "
            android:textColor="@color/white"
            android:textSize="28dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        app:cardBackgroundColor="@color/grey_800"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Grow your Service or Bussiness with Serve on Door"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/service"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_below="@+id/txt"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="0dp"
                android:padding="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="enter the title  " />

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="47dp"
                android:layout_below="@+id/service"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="enter the phone number  " />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_below="@+id/number"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:padding="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="enter the email id  " />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="286dp"
        android:layout_height="100dp"
        android:layout_marginTop="19dp"
        app:cardBackgroundColor="@color/grey_800"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="15dp"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:background="@drawable/gradient_result"

            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>