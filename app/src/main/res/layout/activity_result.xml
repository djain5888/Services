<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_400"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Result">

        <android.support.v7.widget.CardView
            android:id="@+id/topcard"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/grey_300">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/topcard"
                android:scaleType="fitXY"
                android:src="@drawable/salon" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/topcard"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/heading1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/beauty_spa"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/red_500"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heading1"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:text="@string/topic1"
                    android:textAlignment="textStart"
                    android:textSize="15sp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card2"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/heading2"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Benefits"
                    android:textColor="@color/red_500"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heading2"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:padding="15dp"
                    android:text="@string/topic2" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/howCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card3"
            android:layout_margin="5dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="How It Works"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/red_500"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/attentionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/howCard"
            android:layout_margin="5dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attention"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/red_500"/>

        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click here to book"
            android:id="@+id/submit"
            android:textStyle="bold"
            android:layout_below="@id/attentionCard"
            android:onClick="submit"
            android:background="@drawable/btn_getstarted_background"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

</ScrollView>