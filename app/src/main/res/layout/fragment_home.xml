<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:layout_below="@id/toolbar_container">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/search"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorPrimaryDark">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_white"
                android:backgroundTint="@color/white"
                android:text="Search for a service"
                android:padding="5dp"
                android:textSize="20sp"/>

            </android.support.v7.widget.CardView>

            <GridLayout
                android:layout_below="@id/search"
                android:id="@+id/cardgrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:layout_margin="2dp"
                android:columnOrderPreserved="true">

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:id="@+id/salon"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@drawable/hairdresser"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salon at home"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:id="@+id/massage"
                    android:backgroundTint="@color/white"
                    android:layout_margin="2dp"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="82dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/oil" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Massages"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:id="@+id/makeup"
                    android:layout_width="0dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:backgroundTint="@color/white"
                    android:layout_margin="2dp"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/cosmetics"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beauty and Spa"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:id="@+id/electrician"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:backgroundTint="@color/white"
                    android:layout_margin="2dp"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/worker"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plumber"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_row="1"
                    android:id="@+id/appliances"
                    android:layout_column="1"
                    android:backgroundTint="@color/white"
                    android:layout_margin="2dp"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/conditioner"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AC Repair"
                            android:textColor="@color/black"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_row="1"
                    android:id="@+id/yoga"
                    android:layout_column="2"
                    android:backgroundTint="@color/white"
                    android:layout_margin="2dp"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/heart"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salon"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </GridLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/offersRecycler"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/cardgrid"
                android:padding="0dp" />

            <LinearLayout
                android:layout_below="@id/offersRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginLeft="5dp"
                                android:text="Beauty and Spa"
                                android:textSize="20sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:paddingTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:text="Hair | Beard | Facials | Massage"
                                android:textSize="14sp"
                                android:textColor="@color/green_500"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:scaleType="fitXY"
                            android:src="@drawable/spa"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Packers and Movers"
                                android:textSize="20sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:paddingTop="5dp"
                                android:text="Packing | Moving"
                                android:textSize="14sp"
                                android:textColor="@color/green_500"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:src="@drawable/pckmov"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Carpenter"
                                android:textSize="20sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:paddingTop="5dp"
                                android:text="Cabinets | Kitchen | Beds | Sofs"
                                android:textSize="14sp"
                                android:textColor="@color/green_500"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:src="@drawable/carpenter"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Pest Control"
                                android:textSize="20sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:paddingTop="5dp"
                                android:text="Home | Offices"
                                android:textSize="14sp"
                                android:textColor="@color/green_500"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:src="@drawable/pest"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Air Conditioner Repair"
                                android:textSize="20sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:paddingTop="5dp"
                                android:text="Window | Split | Central"
                                android:textSize="14sp"
                                android:textColor="@color/green_500"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:src="@drawable/acrepair"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


